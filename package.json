{
    "name": "pocketnet",
    "version": "0.0.31-beta",
    "description": "Pocketnet desktop application",
    "author": "Pocketnet Community <support@pocketnet.app>",
    "company": "Pocketnet Community",
    "license": "Apache-2.0",
    "main": "main.js",
    "repository": "github:pocketnetapp/pocketnet.gui",
    "scripts": {
        "start": "electron . --development",
        "pack": "electron-builder --dir --x64",
        "dist": "electron-builder -w --x64 --ia32",
        "distl": "electron-builder -l --x64",
        "publish": "build --win --x64 --ia32 -p always"
    },
    "devDependencies": {
        "electron": "^4.1.1",
        "electron-builder": "^20.42.0",
        "electron-rebuild": "^1.8.4",
        "bech32": "^1.1.3",
        "bip32": "^2.0.3",
        "bip66": "^1.1.5",
        "humanize": "0.0.9",
        "jsdom": "^8.5.0",
        "merkle-lib": "^2.0.10",
        "pushdata-bitcoin": "^1.0.1",
        "randombytes": "^2.1.0",
        "tiny-secp256k1": "^1.1.2",
        "typeforce": "^1.18.0",
        "varuint-bitcoin": "^1.1.0",
        "wif": "^2.0.6"
    },
    "dependencies": {
        "aes-js": "^3.1.2",
        "auto-launch": "^5.0.5",
        "desandro-matches-selector": "^2.0.2",
        "electron-localshortcut": "^3.1.0",
        "electron-log": "^3.0.1",
        "electron-spellchecker": "^2.0.0",
        "electron-updater": "^4.0.6",
        "emojione": "^4.5.0",
        "fizzy-ui-utils": "^2.0.7",
        "get-size": "^2.0.3",
        "http-proxy": "^1.17.0",
        "imagesloaded": "^4.1.4",
        "imports-loader": "^0.8.0",
        "isotope-layout": "^3.0.6",
        "isotope-packery": "^2.0.1",
        "jdenticon": "^2.1.0",
        "jquery-bridget": "^2.0.1",
        "jquery-textcomplete": "^1.8.5",
        "jquery.animate-number": "0.0.14",
        "masonry-layout": "^4.2.2",
        "medium-editor": "^5.23.3",
        "node-reverse-wstunnel": "^1.0.0",
        "node-static": "^0.7.11",
        "open": "0.0.5",
        "outlayer": "^2.1.1",
        "pbkdf2": "^3.0.17",
        "pickadate": "^3.5.6",
        "pickadate-webpack": "^3.5.6",
        "socket.io": "^2.2.0",
        "sortablejs": "^1.8.3",
        "ws": "^6.1.4"
    },
    "build": {
        "productName": "Pocketnet",
        "publish": [
            {
                "provider": "github",
                "owner": "pocketnetapp",
                "repo": "pocketnet.gui"
            }
        ],
        "nsis": {
            "artifactName": "${productName}Setup.${ext}",
            "oneClick": false,
            "perMachine": false,
            "allowToChangeInstallationDirectory": true,
            "createDesktopShortcut": true,
            "displayLanguageSelector": true,
            "menuCategory": true,
            "installerIcon": "assets/icons/win/icon.ico",
            "uninstallerIcon": "assets/icons/win/icon.ico",
            "uninstallDisplayName": "${productName}, v${version}",
            "deleteAppDataOnUninstall": true,
            "license": "LICENSE",
            "include": "build/installer.nsh"
        },
        "mac": {
            "target": "dmg",
            "icon": "assets/icons/mac/icon.icns"
        },
        "linux": {
            "target": "deb",
            "category": "Network",
            "icon": "assets/icons",
            "desktop": {
                "Name": "Pocketnet",
                "Icon": "assets/icons",
                "Comment": "Desktop application for Pocketnet",
                "Categories": "Network"
            },
            "description": "Desktop application for Pocketnet"
        },
        "win": {
            "target": "nsis",
            "icon": "assets/icons/win/icon.ico"
        }
    }
}