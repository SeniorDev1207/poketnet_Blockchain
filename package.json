{
    "name": "pocketnet",
    "version": "0.2.4-beta",
    "description": "Pocketnet desktop application",
    "author": "Pocketnet Community <support@pocketnet.app>",
    "company": "Pocketnet Community",
    "license": "Apache-2.0",
    "main": "main.js",
    "repository": "github:pocketnetapp/pocketnet.gui",
    "scripts": {
        "start": "electron . --development",
        "pack": "electron-builder -w --dir --x64",
        "dist": "electron-builder -w --x64 --ia32",
        "distl": "electron-builder -l --x64",
        "distm": "electron-builder -m --x64",
        "publish": "build --win --x64 --ia32 -p always",
        "rebuild": "electron-rebuild",
        "minimize": "node minimize.js",
        "dev": "node minimize.js true"
    },
    "devDependencies": {
        "electron": "",
        "electron-builder": "",
        "electron-rebuild": "",
        "electron-reload": "",
        "electron-reloader": "",
        "humanize": "0.0.9"
    },
    "dependencies": {
        "aes-js": "^3.1.2",
        "async-each": "^1.0.3",
        "auto-launch": "^5.0.5",
        "body-parser": "^1.19.0",
        "clone-deep": "^4.0.1",
        "deep-extend": "^0.6.0",
        "download-github-release": "^0.3.2",
        "electron-context-menu": "^2.4.0",
        "electron-is": "^3.0.0",
        "electron-localshortcut": "^3.2.1",
        "electron-log": "",
        "electron-notarize": "^1.0.0",
        "electron-updater": "^4.3.5",
        "email-validator": "^2.0.4",
        "emojione": "^4.5.0",
        "express": "^4.17.1",
        "express-useragent": "^1.0.15",
        "express-ws": "^4.0.0",
        "filestorage": "^1.7.1",
        "firebase-admin": "^9.3.0",
        "github-download": "^0.5.0",
        "hash-files": "^1.1.1",
        "iconv-lite": "",
        "image-js": "^0.21.9",
        "image-type": "^4.1.0",
        "imagesloaded": "^4.1.4",
        "isotope-layout": "^3.0.6",
        "isotope-packery": "^2.0.1",
        "jdenticon": "^2.1.0",
        "jquery-bridget": "^2.0.1",
        "jquery-textcomplete": "^1.8.5",
        "jquery.animate-number": "0.0.14",
        "jsdom": "^7.2.2",
        "jsonwebtoken": "^8.5.1",
        "lambda-rate-limiter": "",
        "lodash": "^4.17.15",
        "masonry-layout": "^4.2.2",
        "md5": "^2.3.0",
        "medium-editor": "^5.23.3",
        "mjml": "^4.6.3",
        "nedb": "^1.8.0",
        "node-autodetect-utf8-cp1251-cp866": "",
        "node-cmd": "^3.0.0",
        "node-fetch": "",
        "node-iplocate": "^1.0.2",
        "node-rsa": "^1.1.1",
        "nodejs-base64": "^1.0.3",
        "nodemailer": "^6.4.11",
        "object-hash": "^2.0.3",
        "og-parser": "^1.0.5",
        "open": "^6.3.0",
        "password-generator": "^2.3.2",
        "pbkdf2": "^3.0.17",
        "random": "^2.2.0",
        "random-hash": "^4.0.1",
        "request": "^2.88.2",
        "request-promise-native": "^1.0.7",
        "rf-phone-validator": "0.0.3",
        "save": "^2.4.0",
        "sha1": "^1.1.1",
        "sha2": "^1.0.2",
        "sortablejs": "^1.8.3",
        "standard": "^11.0.1",
        "svg-captcha": "^1.4.0",
        "swagger-ui-express": "^4.1.4",
        "tcp-port-used": "^1.0.1",
        "twilio": "^3.48.1",
        "uglify-js": "^3.12.4",
        "underscore": "",
        "yuicompressor": "^2.4.8"
    },
    "build": {
        "appId": "app.pocketnet.gui",
        "afterSign": "build/notarize.js",
        "productName": "Pocketnet",
        "extraFiles": [
            {
                "from": "proxy16/cert",
                "to": "cert",
                "filter": [
                    "**/cert.pem",
                    "**/key.pem"
                ]
            },
            {
                "from": "proxy16/static",
                "to": "static",
                "filter": [
                    "**/"
                ]
            }
        ],
        "publish": [
            {
                "provider": "github",
                "owner": "pocketnetapp",
                "repo": "pocketnet.gui"
            }
        ],
        "mac": {
            "category": "public.app-category.social-networking",
            "target": "dmg",
            "artifactName": "${productName}Setup.${ext}",
            "icon": "assets/icons/mac/icon.icns",
            "gatekeeperAssess": false,
            "hardenedRuntime": true,
            "entitlements": "build/entitlements.mac.plist",
            "entitlementsInherit": "build/entitlements.mac.plist"
        },
        "linux": {
            "target": "AppImage",
            "artifactName": "${productName}_${platform}_${arch}.${ext}",
            "category": "Network",
            "executableName": "Pocketnet",
            "description": "Pocketnet desktop application"
        },
        "dmg": {
            "sign": false
        },
        "appImage": {},
        "win": {
            "target": "nsis",
            "icon": "assets/icons/win/icon.ico"
        },
        "nsis": {
            "artifactName": "${productName}Setup.${ext}",
            "oneClick": false,
            "perMachine": false,
            "allowToChangeInstallationDirectory": true,
            "createDesktopShortcut": true,
            "displayLanguageSelector": true,
            "menuCategory": true,
            "installerIcon": "assets/icons/win/icon.ico",
            "uninstallerIcon": "assets/icons/win/icon.ico",
            "uninstallDisplayName": "${productName}, v${version}",
            "deleteAppDataOnUninstall": true,
            "license": "LICENSE",
            "include": "build/installer.nsh"
        }
    }
}
